    "version": "0.2.0",
    "configurations": [
        {
            "name": "TrackMan Pitchers",
            "type": "debugpy",
            "request": "launch",
            "cwd": "./",
            "program": "./trackman-pitchers.py",
            "args": "",
            "console": "integratedTerminal",
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "${command:pickArgs}"
            ]
        }
    ]
}